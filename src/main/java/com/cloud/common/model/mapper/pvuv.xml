<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.cloud.common.dao.PvUvDao">  
	
	<!-- 添加访问记录 -->
	<insert id="addPvUvLogs" parameterType="map">
	    insert into pvuv_logs (addr,ip,userId,day,creatTime) values (#{addr},#{ip},#{userId},date_format(NOW(),'%Y-%m-%d'),NOW())
	</insert>
    
</mapper> 